{% extends 'layout.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}
    </br>
    <h2>Пользователи</h2>
    </br>
    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>Email</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ url('app_user_claims_index', {'_switch_user': user.email}) }}">Войти под пользователем</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </br>
    <a href="{{ url('app_register') }}">Добавить нового пользователя</a>
{% endblock %}
